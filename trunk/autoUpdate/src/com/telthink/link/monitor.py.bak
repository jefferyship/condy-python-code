        log.info( '没有该IVR的监控配置信息，请查看Monitor_Pt_Config服务.')
        sys.exit()
    for monitorObject in monitorList:
    warnToPersonList=monitorFile(monitorList)
    if len(warnToPersonList)==0:
        log.info( '没有告警信息')
        sys.exit()
    sendToWarn(warnToPersonList)
